# ===========================================
# Resonance - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# ===========================================
# API Service (apps/api)
# ===========================================

# Server
PORT=3001
NODE_ENV=development

# Supabase (Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Knowledge Base Service
KB_SERVICE_URL=http://localhost:8000

# Security - REQUIRED in production
ADMIN_API_KEY=your-secure-admin-api-key-here
KB_SERVICE_API_KEY=your-secure-kb-service-key-here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOW_NO_ORIGIN=false

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# WebSocket Limits
MAX_WS_MESSAGE_BYTES=32768
WS_RATE_LIMIT_WINDOW=60000
WS_RATE_LIMIT_MAX=30

# ===========================================
# Knowledge Base Service (services/kb)
# ===========================================

# Server
PORT=8000
ENVIRONMENT=development

# LLM Provider: "local" (Ollama) or "openai"
LLM_PROVIDER=local

# Ollama (Local LLM - FREE)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.2:latest

# OpenAI (Cloud LLM - if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Embeddings Provider: "local", "openai", or "pinecone"
EMBEDDING_PROVIDER=local
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Pinecone (Vector Database)
PINECONE_API_KEY=pcsk_your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=resonance-kb

# Security - REQUIRED in production
KB_SERVICE_API_KEY=your-secure-kb-service-key-here

# Upload Limits
MAX_UPLOAD_BYTES=10485760

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# Web Dashboard (apps/web)
# ===========================================

# Supabase (Client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# API
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===========================================
# Widget (packages/widget)
# ===========================================

# API URL for widget
VITE_API_URL=http://localhost:3001

# ===========================================
# Testing
# ===========================================

# Skip E2E tests if services not running
SKIP_E2E_TESTS=false
